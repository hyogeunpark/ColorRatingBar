<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <hyogeun.github.com.colorratingbarlib.ColorRatingBar
        style="?android:ratingBarStyleIndicator"
        android:layout_marginTop="50dp"
        android:id="@+id/rating_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="3.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:progress_color="#ff0000"
        app:empty_color="#909090"
        app:layout_constraintTop_toTopOf="parent" />

    <hyogeun.github.com.colorratingbarlib.ColorRatingBar
        android:scaleY="0.5"
        android:scaleX="0.5"
        android:id="@+id/rating_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:rating="3"
        app:empty_color="#f0f000"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_1"
        app:progress_color="#00f0f0" />

    <hyogeun.github.com.colorratingbarlib.ColorRatingBar
        android:id="@+id/rating_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="4.5"
        app:changeable="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_2"
        app:progress_color="#000000"
        app:empty_color="#00000000"
        android:layout_marginTop="40dp" />

    <hyogeun.github.com.colorratingbarlib.ColorRatingBar
        style="?android:ratingBarStyleSmall"
        android:id="@+id/rating_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:rating="3"
        app:empty_color="#f09090"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_3"
        app:progress_color="#25cf10" />

</androidx.constraintlayout.widget.ConstraintLayout>
